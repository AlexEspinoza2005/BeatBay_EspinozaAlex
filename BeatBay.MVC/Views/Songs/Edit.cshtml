@model BeatBay.DTOs.UpdateSongDto
@{
    ViewData["Title"] = "Editar Canción";
}

<h2>Editar Canción: @ViewBag.SongTitle</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Edit" asp-route-id="@ViewBag.SongId" method="post">
    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration">Duración</label>
        <input asp-for="Duration" class="form-control" type="time" step="1" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre">Género</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive">Estado</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Activa</option>
            <option value="false">Inactiva</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Actualizar Canción</button>
    <a asp-action="Details" asp-route-id="@ViewBag.SongId" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}