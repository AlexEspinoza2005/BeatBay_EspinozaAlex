@{
    ViewData["Title"] = "Panel de Estadísticas - Administración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-chart-line text-primary"></i>
                        Panel de Estadísticas
                    </h2>
                    <p class="text-muted mb-0">Administración - BeatBay</p>
                </div>
                <div>
                    <button id="refreshStats" class="btn btn-outline-primary">
                        <i class="fas fa-sync-alt"></i> Actualizar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Principales -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Canciones</h6>
                            <h3 id="totalSongs" class="mb-0">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Cargando...</span>
                                </div>
                            </h3>
                            <small class="opacity-75">Canciones activas</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-music fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Usuarios</h6>
                            <h3 id="totalUsers" class="mb-0">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Cargando...</span>
                                </div>
                            </h3>
                            <small class="opacity-75">Usuarios registrados</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Desglose de Usuarios -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="fas fa-microphone fa-2x text-info mb-2"></i>
                    <h6 class="text-info">Total Artistas</h6>
                    <h4 id="totalArtists" class="text-info">
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </h4>
                    <small class="text-muted">Artistas activos</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <i class="fas fa-user fa-2x text-secondary mb-2"></i>
                    <h6 class="text-secondary">Usuarios Gratuitos</h6>
                    <h4 id="freeUsers" class="text-secondary">
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </h4>
                    <small class="text-muted">Sin plan premium</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Desglose de Usuarios Premium -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-crown text-warning"></i>
                        Usuarios Premium
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-plus fa-2x text-primary mb-2"></i>
                                    <h6 class="text-primary">Premium Personal</h6>
                                    <h4 id="personalUsers" class="text-primary">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Cargando...</span>
                                        </div>
                                    </h4>
                                    <small class="text-muted">Plan individual</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-2x text-success mb-2"></i>
                                    <h6 class="text-success">Premium Familiar</h6>
                                    <h4 id="familiarUsers" class="text-success">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Cargando...</span>
                                        </div>
                                    </h4>
                                    <small class="text-muted">Plan familiar</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-building fa-2x text-warning mb-2"></i>
                                    <h6 class="text-warning">Premium Business</h6>
                                    <h4 id="businessUsers" class="text-warning">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Cargando...</span>
                                        </div>
                                    </h4>
                                    <small class="text-muted">Plan empresarial</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Estado de Carga -->
    <div id="loadingIndicator" class="row mt-3" style="display: none;">
        <div class="col-12">
            <div class="alert alert-info text-center">
                <div class="spinner-border me-2" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                Cargando estadísticas...
            </div>
        </div>
    </div>

    <!-- Mensajes de Error -->
    <div id="errorAlert" class="row mt-3" style="display: none;">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i>
                <span id="errorMessage"></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cargar estadísticas al inicializar
            loadDashboardStats();

            // Actualizar automáticamente cada 60 segundos
            setInterval(loadDashboardStats, 60000);

            // Botón de actualizar manual
            $('#refreshStats').click(function() {
                loadDashboardStats();
            });
        });

        function showLoading() {
            $('#loadingIndicator').show();
            $('#errorAlert').hide();
        }

        function hideLoading() {
            $('#loadingIndicator').hide();
        }

        function showError(message) {
            $('#errorMessage').text(message);
            $('#errorAlert').show();
            hideLoading();
        }

        function loadDashboardStats() {
            showLoading();

            $.ajax({
                url: '@Url.Action("Dashboard", "AdminStatistics")',
                type: 'GET',
                timeout: 10000,
                success: function(data) {
                    try {
                        // Estadísticas principales
                        $('#totalSongs').text(data.overview.totalSongs.toLocaleString());
                        $('#totalUsers').text(data.overview.totalUsers.toLocaleString());
                        $('#totalArtists').text(data.overview.totalArtists.toLocaleString());

                        // Desglose de usuarios
                        $('#freeUsers').text(data.userBreakdown.freeUsers.toLocaleString());
                        $('#personalUsers').text(data.userBreakdown.personalUsers.toLocaleString());
                        $('#familiarUsers').text(data.userBreakdown.familiarUsers.toLocaleString());
                        $('#businessUsers').text(data.userBreakdown.businessUsers.toLocaleString());

                        hideLoading();
                    } catch (e) {
                        showError('Error procesando los datos de estadísticas');
                        console.error('Error procesando datos:', e);
                    }
                },
                error: function(xhr, status, error) {
                    let errorMsg = 'Error al cargar las estadísticas';

                    if (xhr.status === 403) {
                        errorMsg = 'No tiene permisos para acceder a estas estadísticas';
                    } else if (xhr.status === 401) {
                        errorMsg = 'Su sesión ha expirado. Por favor, inicie sesión nuevamente';
                    } else if (xhr.status >= 500) {
                        errorMsg = 'Error interno del servidor';
                    } else if (status === 'timeout') {
                        errorMsg = 'Tiempo de espera agotado. Intente nuevamente';
                    }

                    showError(errorMsg);
                    console.error('Error AJAX:', xhr, status, error);

                    // Mostrar valores por defecto en caso de error
                    $('.spinner-border').parent().text('-');
                }
            });
        }
    </script>
}