<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - BeatBay</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 500px;
            width: 100%;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }

        .icon {
            font-size: 4rem;
            margin-bottom: 20px;
            animation: bounce 2s infinite;
        }

        .success-icon {
            color: #28a745;
        }

        .error-icon {
            color: #dc3545;
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-30px);
            }
            60% {
                transform: translateY(-15px);
            }
        }

        h1 {
            color: #2c3e50;
            font-size: 2.5rem;
            margin-bottom: 20px;
            font-weight: 300;
        }

        .message {
            color: #555;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .success-message {
            color: #155724;
            background: #d4edda;
            border: 1px solid #c3e6cb;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .error-message {
            color: #721c24;
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .btn-container {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 30px;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

        .beatbay-logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 20px;
        }

        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            color: #888;
            font-size: 0.9rem;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .feature {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            text-align: center;
        }

        .feature i {
            font-size: 2rem;
            color: #667eea;
            margin-bottom: 10px;
        }

        .feature h3 {
            font-size: 1rem;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .feature p {
            font-size: 0.9rem;
            color: #666;
        }

        @@media (max-width: 600px) {
            .container {
                padding: 30px 20px;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            .btn-container {
                flex-direction: column;
                align-items: center;
            }
            
            .btn {
                width: 100%;
                max-width: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="beatbay-logo">
            <i class="fas fa-music"></i> BeatBay
        </div>

        @if (Model.IsSuccess)
        {
            <div class="icon success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1>¡Bienvenido!</h1>
            <div class="success-message">
                @Model.Message
            </div>
            
            <div class="features">
                <div class="feature">
                    <i class="fas fa-headphones"></i>
                    <h3>Escucha</h3>
                    <p>Miles de beats</p>
                </div>
                <div class="feature">
                    <i class="fas fa-download"></i>
                    <h3>Descarga</h3>
                    <p>Calidad HD</p>
                </div>
                <div class="feature">
                    <i class="fas fa-users"></i>
                    <h3>Conecta</h3>
                    <p>Con artistas</p>
                </div>
            </div>

            <div class="btn-container">
                <a href="/login" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i>
                    Iniciar Sesión
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fas fa-home"></i>
                    Ir al Inicio
                </a>
            </div>
        }
        else
        {
            <div class="icon error-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1>Oops!</h1>
            <div class="error-message">
                @Model.Message
            </div>

            <div class="btn-container">
                <a href="/register" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i>
                    Registrarse Nuevamente
                </a>
                <a href="/support" class="btn btn-secondary">
                    <i class="fas fa-question-circle"></i>
                    Soporte
                </a>
            </div>
        }

        <div class="footer">
            <p>&copy; 2024 BeatBay. Todos los derechos reservados.</p>
            <p>La plataforma definitiva para beats y música.</p>
        </div>
    </div>

    <script>
        // Animación de confetti para casos exitosos
        if (@Model.IsSuccess.ToString().ToLower()) {
            // Crear confetti simple
            function createConfetti() {
                const colors = ['#667eea', '#764ba2', '#28a745', '#ffc107'];
                for (let i = 0; i < 50; i++) {
                    const confetti = document.createElement('div');
                    confetti.style.position = 'fixed';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.top = '-10px';
                    confetti.style.width = '10px';
                    confetti.style.height = '10px';
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.borderRadius = '50%';
                    confetti.style.pointerEvents = 'none';
                    confetti.style.zIndex = '9999';
                    confetti.style.animation = `fall ${Math.random() * 2 + 1}s linear forwards`;
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 3000);
                }
            }

            // CSS para la animación de caída
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes fall {
                    to {
                        transform: translateY(100vh) rotate(360deg);
                    }
                }
            `;
            document.head.appendChild(style);

            // Ejecutar confetti después de un breve retraso
            setTimeout(createConfetti, 500);
        }
    </script>
</body>
</html>