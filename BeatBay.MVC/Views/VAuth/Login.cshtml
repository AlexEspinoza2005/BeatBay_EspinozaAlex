@model BeatBay.DTOs.LoginDto

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h3><i class="fas fa-sign-in-alt"></i> Login to BeatBay</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" id="floatingUserName" placeholder="Username" />
                        <label for="floatingUserName"><i class="fas fa-user"></i> Username</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                        <label for="floatingPassword"><i class="fas fa-lock"></i> Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-2">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-outline-success me-2">
                        <i class="fas fa-user-plus"></i> Register as User
                    </a>
                    <a asp-action="RegisterArtist" class="btn btn-outline-warning">
                        <i class="fas fa-microphone"></i> Register as Artist
                    </a>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="ForgotPassword" class="text-muted">
                        <i class="fas fa-question-circle"></i> Forgot your password?
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        margin-top: 50px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
        padding: 20px;
    }

    .form-floating > label {
        padding-left: 2.5rem;
    }

    .form-floating > .form-control {
        padding-left: 2.5rem;
    }

    .form-floating > label i {
        position: absolute;
        left: -1.5rem;
        top: 50%;
        transform: translateY(-50%);
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}