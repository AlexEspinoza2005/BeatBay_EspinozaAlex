@{
    ViewData["Title"] = "Panel de Administración - BeatBay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Main Content -->
    <div class="main-content">
        <!-- Dashboard Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-home"></i> Dashboard</h2>
            <span class="badge bg-primary">Panel de Control</span>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="totalUsersCount">Cargando...</h4>
                                <p class="mb-0">Usuarios Totales</p>
                            </div>
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="totalSongsCount">Cargando...</h4>
                                <p class="mb-0">Canciones Activas</p>
                            </div>
                            <i class="fas fa-music fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 id="totalPlaysCount">Cargando...</h4>
                                <p class="mb-0">Reproducciones</p>
                            </div>
                            <i class="fas fa-play fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-bolt"></i> Acciones Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="https://localhost:7194/Songs" class="btn btn-primary btn-block w-100">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Index", "Admin")" class="btn btn-info btn-block w-100">
                            <i class="fas fa-user-plus"></i> Gestionar Usuarios
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Index", "AdminStatistics")" class="btn btn-success btn-block w-100">
                            <i class="fas fa-chart-line"></i> Ver Estadísticas
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Status -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-server"></i> Estado del Sistema</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Versión:</strong></td>
                                        <td>BeatBay v1.0.0</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Base de Datos:</strong></td>
                                        <td><span class="badge bg-success">Conectada</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Servidor:</strong></td>
                                        <td><span class="badge bg-success">En línea</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Última actualización:</strong></td>
                                        <td id="lastUpdate">Cargando...</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-info-circle"></i> Estado del sistema</h6>
                                    <small id="systemStatus">Verificando estado...</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cargar datos reales del dashboard
            loadDashboardData();

            // Auto-refresh cada 30 segundos
            setInterval(loadDashboardData, 30000);
        });

        function loadDashboardData() {
            // Ajax call para datos reales
            $.ajax({
                url: '@Url.Action("GetDashboardData", "AdminStatistics")',
                type: 'GET',
                success: function(data) {
                    if(data) {
                        $('#totalUsersCount').html(data.totalUsers || '0');
                        $('#totalSongsCount').html(data.totalSongs || '0');
                        $('#totalPlaysCount').html(data.totalPlays || '0');
                        $('#lastUpdate').html('Hace ' + (data.lastUpdateMinutes || '0') + ' minutos');

                        // Actualizar estado del sistema
                        if(data.systemStatus && data.systemStatus.isHealthy) {
                            $('#systemStatus').html('Todas las funcionalidades principales están operativas.');
                            $('.alert').removeClass('alert-warning alert-danger').addClass('alert-success');
                            $('.alert h6 i').removeClass('fa-exclamation-triangle fa-times-circle').addClass('fa-check-circle');
                        } else {
                            $('#systemStatus').html('Algunos servicios pueden estar experimentando problemas.');
                            $('.alert').removeClass('alert-success alert-info').addClass('alert-warning');
                            $('.alert h6 i').removeClass('fa-check-circle fa-info-circle').addClass('fa-exclamation-triangle');
                        }
                    }
                },
                error: function(xhr, status, error) {
                    // Mostrar error si no se pueden cargar los datos
                    console.log('Error cargando datos del dashboard:', error);
                    $('#totalUsersCount').html('Error');
                    $('#totalSongsCount').html('Error');
                    $('#totalPlaysCount').html('Error');
                    $('#lastUpdate').html('Error de conexión');
                    $('#systemStatus').html('No se pudieron cargar los datos del sistema.');
                    $('.alert').removeClass('alert-success alert-info').addClass('alert-danger');
                    $('.alert h6 i').removeClass('fa-check-circle fa-info-circle').addClass('fa-times-circle');
                }
            });
        }
    </script>
}

<style>
    .main-content {
        padding: 20px;
    }

    .card {
        margin-bottom: 20px;
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .badge {
        font-size: 0.8em;
    }

    .btn-block {
        width: 100%;
    }

    #totalUsersCount, #totalSongsCount, #totalPlaysCount {
        min-height: 1.5em;
    }
</style>