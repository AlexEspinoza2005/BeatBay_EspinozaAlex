@{
    ViewData["Title"] = "Home";
    bool isAuthenticated = !string.IsNullOrEmpty(Context.Session.GetString("JwtToken"));
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">Welcome to BeatBay</h1>
            <p class="lead text-muted">Your one-stop destination for music streaming and sharing</p>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    @if (!isAuthenticated)
                    {
                        <!-- Botones para usuarios no autenticados -->
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a href="@Url.Action("Login", "VAuth")" class="btn btn-primary btn-lg p-4 shadow-sm">
                                        <i class="fas fa-sign-in-alt fa-2x mb-3"></i>
                                        <h4 class="mb-0">Login</h4>
                                        <p class="mb-0 text-light">Access your account</p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a href="@Url.Action("Register", "VAuth")" class="btn btn-info btn-lg p-4 shadow-sm">
                                        <i class="fas fa-user-plus fa-2x mb-3"></i>
                                        <h4 class="mb-0">Register</h4>
                                        <p class="mb-0 text-light">Create an account</p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a href="@Url.Action("RegisterArtist", "VAuth")" class="btn btn-warning btn-lg p-4 shadow-sm">
                                        <i class="fas fa-guitar fa-2x mb-3"></i>
                                        <h4 class="mb-0">Artist</h4>
                                        <p class="mb-0 text-light">Join as an artist</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Botones para usuarios autenticados -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a href="@Url.Action("Index", "Songs")" class="btn btn-primary btn-lg p-4 shadow-sm">
                                        <i class="fas fa-music fa-2x mb-3"></i>
                                        <h4 class="mb-0">Songs</h4>
                                        <p class="mb-0 text-light">Browse music</p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a href="@Url.Action("Index", "Plans")" class="btn btn-success btn-lg p-4 shadow-sm">
                                        <i class="fas fa-crown fa-2x mb-3"></i>
                                        <h4 class="mb-0">Plans</h4>
                                        <p class="mb-0 text-light">Manage subscription</p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a href="@Url.Action("Profile", "VAuth")" class="btn btn-info btn-lg p-4 shadow-sm">
                                        <i class="fas fa-user fa-2x mb-3"></i>
                                        <h4 class="mb-0">Profile</h4>
                                        <p class="mb-0 text-light">View your profile</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-headphones-alt fa-3x text-primary mb-3"></i>
                    <h3>Listen Anywhere</h3>
                    <p class="text-muted">Stream your favorite music on any device, anytime.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h3>Share with Friends</h3>
                    <p class="text-muted">Connect with friends and share your favorite tracks.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-star fa-3x text-warning mb-3"></i>
                    <h3>Premium Quality</h3>
                    <p class="text-muted">Experience high-quality audio streaming.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-lg {
        transition: all 0.3s ease;
        border: none;
        min-height: 180px;
    }

    .btn-lg:hover {
        transform: translateY(-3px);
    }

    .btn-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    .btn-success {
        background: linear-gradient(135deg, #1cc88a 0%, #13855c 100%);
    }

    .btn-info {
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
        color: white !important;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
        color: white !important;
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075)!important;
    }

    .fas {
        display: block;
        margin-bottom: 0.5rem;
    }

    .btn-lg p {
        opacity: 0.9;
        font-size: 0.9rem;
    }

    .btn-lg h4 {
        color: white;
    }
</style>